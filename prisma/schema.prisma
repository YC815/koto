generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Vocabulary {
  id          String   @id @default(cuid())
  content     String   // 完整內容 (句子/片語/單字/字)
  focusedTerm String   @default("") // 重點字 (選取的部分,為空則整段都是重點)
  reading     String   // 假名讀音 (針對 focusedTerm 或 content)
  meaning     String   // 日日釋義 (針對 focusedTerm 或 content)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([content])
  @@index([focusedTerm])
  @@index([createdAt(sort: Desc)])
}
